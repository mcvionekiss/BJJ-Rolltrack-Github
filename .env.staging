# Staging Environment Variables

# Deployment Environment
PIPELINE=staging
REACT_APP_ENV=staging

# Domain Configuration
DOMAIN_NAME=staging.your-domain.com
ALLOWED_HOSTS=staging.your-domain.com
CORS_ALLOWED_ORIGINS=https://staging.your-domain.com
CSRF_TRUSTED_ORIGINS=https://staging.your-domain.com

# URLs
REACT_APP_API_URL=https://staging.your-domain.com/api
REACT_APP_PUBLIC_URL=https://staging.your-domain.com
BACKEND_URL=http://backend:8000
FRONTEND_URL=http://frontend:80

# Database Configuration (AWS RDS)
DB_NAME=bjjrolltrack_staging
DB_USER=admin
DB_PASSWORD=your-secure-password
DB_HOST=rds-mysql-bjjrolltrack.cnaa6y844puy.us-east-1.rds.amazonaws.com
DB_PORT=3306

# Django Configuration
DEBUG=False
DJANGO_SECRET_KEY=your-secure-django-secret-key-for-staging
USE_HTTPS=True

# Scaling Configuration
BACKEND_REPLICAS=1

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443

# SSL Configuration
SSL_CERTIFICATE=/etc/nginx/ssl/cert.pem
SSL_KEY=/etc/nginx/ssl/key.pem