# Testing Environment Configuration
# For local testing before deployment to staging/production

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api

# Backend Configuration
PIPELINE=production  # Still use production settings but with overrides
DJANGO_SECRET_KEY=testing_secret_key_only_for_local_use
ALLOWED_HOSTS=localhost,127.0.0.1,your-local-ip-address
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://your-local-ip-address:3000

# Database Configuration - Local MySQL or SQLite
DB_NAME=bjj_rolltrack_test
DB_USER=your_local_db_user
DB_PASSWORD=your_local_db_password
DB_HOST=localhost
DB_PORT=3306

# Disable HTTPS requirements for local testing
BYPASS_HTTPS=true

# Nginx Settings (if using nginx locally)
DOMAIN_NAME=localhost
USE_HTTPS=false

# This file is intended for testing production-like settings locally
# without requiring SSL certificates or domain names
 AUTO_RENEW_CERT=true
 DOMAIN_NAME=staging.rollltrackapp.com