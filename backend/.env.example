# Backend Environment Variables

# Django Settings
DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here
PIPELINE=development  # Options: development, staging, production

# Database Settings
DB_NAME=test
DB_USER=admin
DB_PASSWORD=your-password
DB_HOST=your-host
DB_PORT=3306

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://your-domain.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://your-domain.com

# Domain Settings
DOMAIN_NAME=localhost
ALLOWED_HOSTS=localhost,127.0.0.1

# SSL/HTTPS Settings
USE_HTTPS=False
SSL_CERTIFICATE=/path/to/cert.pem
SSL_KEY=/path/to/key.pem